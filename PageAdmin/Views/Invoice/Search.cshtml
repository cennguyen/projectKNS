
@model IEnumerable<PageAdmin.Models.Invoice>

@{
    ViewData["Title"] = "SearchInvoice";
}


<h1>Welcome to the Pages Admin</h1>
<table class=" table table-striped">
    <thead>
        <tr>
            <th>Payment Type </th>
            <th>Amout </th>
            <th>Cleared </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">No Match Any Document</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
    <tr>
        <td>@item.PaymentType</td>
        <td>@item.Amout</td>
        <td>@item.Cleared</td>
        <td>
            <a asp-action="Details" asp-route-id="@item.PaymentID">Details</a> 
        </td>
    </tr>
        }
    }
        </tbody>
    </table>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
