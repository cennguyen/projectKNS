
@model IEnumerable<PageAdmin.Models.SalesPerson>

@{
    ViewData["Title"] = "SearchSale";
}


<h1>Welcome to the Pages Admin</h1>
<table class=" table table-striped">
    <thead>
        <tr>
            <th>FirstName </th>
            <th>LastName </th>
            <th>Phone </th>
            <th>HireDate </th>
            <th>Active </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">No Match Any Document</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
    <tr>
        <td>@item.FirstName</td>
        <td>@item.LastName</td>
        <td>@item.Phone</td>
        <td>@item.HireDate</td>
        <td>@item.Active</td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.SalesPersonID">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.SalesPersonID">Details</a>
        </td>
    </tr>
        }
    }
        </tbody>
    </table>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
