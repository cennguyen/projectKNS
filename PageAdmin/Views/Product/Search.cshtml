
@model IEnumerable<PageAdmin.Models.Product>

@{
    ViewData["Title"] = "Search";
}


<h1>Welcome to the Pages Admin</h1>
<table class=" table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>StandardPrice</th>
            <th>UnityType</th>
            <th>abc</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">No Match Any Document</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.UnityType</td>
                    <td>@item.StandardPrice</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ProductID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProductID" onclick="return confirm('Are you sure to delete this record?')">Delete</a>
                    </td>
                </tr>
        }
    }
        </tbody>
    </table>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
